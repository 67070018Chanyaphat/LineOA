{
    "build": {
      "nixpacks": {
        "phases": {
          "setup": {
            "pkgs": ["python3", "gcc"]
          },
          "install": {
            "cmds": [
              "python -m venv /opt/venv",
              ". /opt/venv/bin/activate && pip install -r requirements.txt"
            ]
          }
        }
      }
    },
    "deploy": {
      "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT"
    }
  }
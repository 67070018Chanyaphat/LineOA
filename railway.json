{
    "build": {
      "builder": "nixpacks",
      "config": {
        "phases": {
          "install": {
            "cmds": [
              "pip install --user -r requirements.txt"
            ]
          }
        }
      }
    },
    "deploy": {
      "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT"
    }
  }
{
  "build": {
    "builder": "nixpacks",
    "config": {
      "phases": {
        "install": {
          "cmds": [
            "pip install -r requirements.txt"  
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:${PORT:-8000}" 
  }
}
